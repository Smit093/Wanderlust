<% layout('/layouts/boilerplate.ejs') %>

    <body>
        <div class="row mt-3">
            <div class="col-8 offset-2">
                <h1>Edit your Listing</h1>
                <form novalidate class="needs-validation" method="POST" action="/listings/<%= listing._id%>?_method=PUT"
                    enctype="multipart/form-data">
                    <div class="mb-3">
                        <label class="form-lable" for="title">Title</label>
                        <input required class="form-control" type="text" name="listing[title]"
                            value="<%=listing.title%>">
                        <div class="invalid-feedback">
                            Please Give a Title to your Listing
                        </div>
                    </div>
                    <div class=" mb-3">
                        <label class="form-lable" for="description">Description</label>
                        <textarea required class="form-control" type="text" name="listing[description]"
                            value="<%=listing.description%>"><%=listing.description%></textarea>
                    </div>
                    <div class="mb-3">
                        <p>Original Listing Image</p>
                        <img src="<%=originalUrl %>" alt="listing image">
                    </div>
                    <div class="mb-3">
                        <label class="form-lable" for="img">Upload New Image</label>
                        <input class="form-control" type="file" name="listing[image]">
                    </div>
                    <div class="row">
                        <div class="mb-3 col-4">
                            <label class="form-lable" for="price">Price</label>
                            <input required class="form-control" type="number" name="listing[price]"
                                value="<%=listing.price%>">
                        </div>
                        <div class="mb-3 col-8">
                            <label class="form-lable" for="country">Country</label>
                            <input required class="form-control" type="text" name="listing[country]"
                                value="<%=listing.country%>">
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-lable" for="location">Location</label>
                        <input required class="form-control" type="text" name="listing[location]"
                            value="<%=listing.location%>">
                    </div>
                    <button class="btn btn-dark edit-btn mt-3">Edit</button>
                </form>
            </div>
        </div>
    </body>