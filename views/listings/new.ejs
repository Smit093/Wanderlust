<% layout('/layouts/boilerplate.ejs') %>

    <body>
        <div class="row mt-3">
            <div class="col-8 offset-2">
                <br><br>
                <form class="needs-validation" novalidate action="/listings/" method="POST"
                    enctype="multipart/form-data">
                    <h1>Add Your Listing</h1>
                    <div class="mb-3">
                        <label for="title" class="form-lable">Title</label>
                        <input required type="text" placeholder="enter title" class="form-control"
                            name="listing[title]">
                        <div class="valid-feedback">
                            Title Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Please Give a Title to your Listing
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-lable">Description</label>
                        <textarea type="text" required class="form-control" name="listing[description]"></textarea>
                        <div class="valid-feedback">
                            Description Looks good!
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="img" class="form-lable">Upload Listing Image</label>
                        <input required type="file" class="form-control" name="listing[image]">
                    </div>
                    <div class="mb-3">
                        <select class="form-select" name="listing[catagory]" required aria-label="Default select example">
                            <option selected disabled hidden >Select catagory</option>
                            <option value="trending">trending</option>
                            <option value="rooms">rooms</option>
                            <option value="iconic city">iconic city</option>
                            <option value="mountain">mountain</option>
                            <option value="castel">castel</option>
                            <option value="pools">pools</option>
                            <option value="camping">camping</option>
                            <option value="farm">farm</option>
                            <option value="arctic">arctic</option>
                            <option value="dome">dome</option>
                            <option value="boat">boat</option>
                        </select>
                    </div>
                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-lable">Price</label>
                            <input type="number" required placeholder="enter price" class="form-control"
                                name="listing[price]">
                            <div class="invalid-feedback">
                                Please Enter a valid price
                            </div>
                        </div>
                        <div class="mb-3 col-md-8">
                            <label for="country" class="form-lable">Country</label>
                            <input type="text" required placeholder="enter country" class="form-control"
                                name="listing[country]">
                            <div class="invalid-feedback">
                                Please Enter a country
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="location" class="form-lable">Location</label>
                        <input type="text" required placeholder="enter location" class="form-control"
                            name="listing[location]">
                        <div class="invalid-feedback">
                            Please Enter a location
                        </div>
                    </div>
                    <button class="btn btn-dark add-btn mt-3">Add</button>
                    <br><br>
                </form>
            </div>
        </div>
    </body>